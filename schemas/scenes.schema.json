{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "$id": "#/items",
        "type": "object",
        "required": ["id"],
        "properties": {
            "id": {
                "type": "string"
            },
            "scripts": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "text": {
                            "type": "string"
                        },
                        "characters": {
                            "$ref": "#/definitions/characters"
                        },
                        "effects": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "examples": ["pan", "up", "down", "right", "left"]
                            }
                        },
                        "states": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "examples": ["blur"]
                            }
                        },
                        "audios": {
                            "$ref": "#/definitions/audios"
                        },
                        "choice": {
                            "$ref": "#/definitions/choice"
                        }
                    }
                }
            },
            "img": {
                "type": "string"
            },
            "choice": {
                "$ref": "#/definitions/choice"
            },
            "audios": {
                "$ref": "#/definitions/audios"
            }
        }
    },
    "definitions": {
        "audios": {
            "$id": "#/definitions/audios",
            "type": "array",
            "items": {
                "type": "object",
                "required": ["id"],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "time": {
                        "type": "integer",
                        "default": 0,
                        "description": "開始時刻ms"
                    },
                    "volume": {
                        "type": "integer",
                        "default": 0,
                        "description": "音量0.0~1.0"
                    },
                    "fadein": {
                        "type": "boolean",
                        "default": false
                    }
                }
            }
        },
        "choice": {
            "$id": "#/definitions/choice",
            "type": "array",
            "items": {
                "type": "object",
                "required": ["label", "scene_id"],
                "properties": {
                    "label": {
                        "type": "string"
                    },
                    "scene_id": {
                        "type": "string"
                    },
                    "flags": {
                        "title": "フラグを立てる",
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "value": {
                                    "type": "boolean",
                                    "default": false
                                },
                                "method": {
                                    "type": "string",
                                    "examples": ["and", "or", "xor"]
                                }
                            }
                        }
                    },
                    "onflags": {
                        "title": "フラグが立ってるときに選択肢を表示する",
                        "type": "object",
                        "required": ["value", "method", "ids"],
                        "properties": {
                            "value": {
                                "type": "number"
                            },
                            "method": {
                                "type": "string",
                                "examples": ["all", "some"]
                            },
                            "ids": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "characters": {
            "$id": "#/definitions/characters",
            "type": "array",
            "items": {
                "type": "object",
                "required": ["id"],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "diff": {
                        "type": "string"
                    },
                    "effects": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "examples": ["swing", "nod"]
                        }
                    },
                    "states": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "examples": ["bottomup", "disable"]
                        }
                    },
                    "x": {
                        "type": "integer",
                        "default": 0
                    },
                    "y": {
                        "type": "integer",
                        "default": 0
                    },
                    "scale": {
                        "type": "integer",
                        "default": 0
                    }
                }
            }
        }
    }
}